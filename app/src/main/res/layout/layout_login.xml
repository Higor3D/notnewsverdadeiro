<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="110dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/loginImage"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:src="@drawable/notnews_icon"

            />

        <EditText
            android:id="@+id/LoginId"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="70dp"
            android:backgroundTint="#FC6454"
            android:fontFamily="@font/hollywoodone"
            android:hint="UsuÃ¡rio"
            android:inputType="text"
            android:maxLength="20"
            android:textColorHint="#FFFFFF"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/SenhaId"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="60dp"
            android:backgroundTint="#FC6454"
            android:fontFamily="@font/hollywoodone"
            android:hint="Senha"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textColorHint="#FFFFFF"
            android:textSize="13sp" />

        <Button
            android:id="@+id/idBtnLogin"
            android:layout_width="200dp"
            android:layout_height="65dp"
            android:background="@drawable/button"
            android:fontFamily="@font/hollywoodone"
            android:text="login"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/cadastrarId"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:fontFamily="@font/hollywoodone"
            android:padding="8dp"
            android:text="Novo por aqui? Cadastre-se"
            android:textColor="@color/white"
            android:textSize="9dp"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>